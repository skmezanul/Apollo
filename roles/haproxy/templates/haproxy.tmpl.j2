{% raw %}
global
    maxconn {{or (key "service/haproxy/maxconn") 256}}
    debug

defaults
    mode http
    log     global
    maxconn 8000
    option  redispatch
    option  http-server-close
    retries 3
    stats   enable
    timeout http-request 10s
    timeout queue 1m
    timeout connect 10s
    timeout client 1m
    timeout server 1m
    timeout check 10s
    option forwardfor except 127.0.0.1
{% endraw %}

{% raw %}
frontend qa_mailhog_smtp
    bind :1025 name smtp
    mode tcp
    default_backend qa_mailhog_smtp

frontend qt_mailhog_smtp
    bind :1026 name smtp
    mode tcp
    default_backend qt_mailhog_smtp

frontend www
    bind *:80
    default_backend mesos_slaves

    acl acl_qa_mailhog hdr(host) -i mailcatcher.qa.service.vcloud
    use_backend qa_mailhog if acl_qa_mailhog

    acl acl_qt_mailhog hdr(host) -i mailcatcher.qt.service.vcloud
    use_backend qt_mailhog if acl_qt_mailhog

backend qa_mailhog
    {{range service "qa.mailhog-http" }}
    server {{.ID}} {{.Address}}:{{.Port}} check{{end}}

backend qt_mailhog
    {{range service "qt.mailhog-http" }}
    server {{.ID}} {{.Address}}:{{.Port}} check{{end}}

backend qa_mailhog_smtp
    mode tcp{{range service "qa.mailhog-smtp" }}
    server {{.ID}} {{.Address}}:{{.Port}} check{{end}}

backend qt_mailhog_smtp
    mode tcp{{range service "qt.mailhog-smtp" }}
    server {{.ID}} {{.Address}}:{{.Port}} check{{end}}

backend mesos_slaves
    server coreos04 10.66.1.158:80 check
    server coreos05 10.66.1.159:80 check
    server coreos06 10.66.1.160:80 check
{% endraw %}
